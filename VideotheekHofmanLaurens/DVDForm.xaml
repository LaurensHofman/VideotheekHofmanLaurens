<UserControl x:Name ="ucDVDForm" x:Class="VideotheekHofmanLaurens.DVDForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideotheekHofmanLaurens"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White" Height="750" Width="400">
    <Grid x:Name="grdDVDForm">
        <Label x:Name="lblTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Content="Title" Margin="10,0" Height="39" VerticalAlignment="Top"/>
        <Label x:Name="lblName" Content="* _Name:" Target="{Binding ElementName=txtName}" Height="30" FontSize="16" Margin="10,45,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" FontSize="14" VerticalContentAlignment="Center" Height="30" Margin="10,80,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblDescription" Content="_Description:" Target="{Binding ElementName=txtDescription}" Height="30" FontSize="16" Margin="10,115,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDescription" FontSize="14" VerticalContentAlignment="Center" Height="30" Margin="10,150,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblDirector" Content="Di_rector:" Target="{Binding ElementName=txtDirector}" Height="30" FontSize="16" Margin="10,185,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDirector" FontSize="14" VerticalContentAlignment="Center" Height="30" Margin="10,220,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblGenres" Content="_Genres:" Target="{Binding ElementName=txtGenres}" Height="30" FontSize="16" Margin="10,255,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGenres" FontSize="14" VerticalContentAlignment="Center" Height="30" Margin="10,290,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblStock" Content="* Current _Stock:" Target="{Binding ElementName=txtStock}" Height="30" FontSize="16" Margin="10,325,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtStock" FontSize="14" VerticalContentAlignment="Center" Height="30" Margin="10,360,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblPricePerWeek" Content="* _Price per week (€):" Target="{Binding ElementName=txtPricePerWeek}" Height="30" FontSize="16" Margin="10,395,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPricePerWeek" FontSize="14" VerticalContentAlignment="Center" Height="30" Margin="10,430,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblPEGI" Content="PEGI recommended _age:" Target="{Binding ElementName=txtPEGI}" Height="30" FontSize="16" Margin="10,465,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPEGI" FontSize="14" VerticalContentAlignment="Center" Height="30" Margin="10,500,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblDVDType" Content="* DVD _Type:" Target="{Binding ElementName=txtGenres}" Height="30" FontSize="16" Margin="10,535,10,0" VerticalAlignment="Top"/>

        <ComboBox x:Name="cmbDVDType" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,570,0,0" VerticalAlignment="Top" Height="30" Width="120">
            <ComboBoxItem IsSelected="True"> Movie </ComboBoxItem>
            <ComboBoxItem> TV-Series </ComboBoxItem>
        </ComboBox>
        <Label x:Name="lblDurationOrEpisodes" Content="Movie duration:" Height="30" FontSize="16" Margin="10,605,10,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
